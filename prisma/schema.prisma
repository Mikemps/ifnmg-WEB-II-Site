generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

model Usuario {
  idUsuario Int      @id @default(autoincrement())
  nome       String
  email      String   @unique
  senha      String

  perfilId   Int
  perfil     Perfil   @relation(fields: [perfilId], references: [idPerfil])

  postagens  Postagem[]
  editais    Edital[]
  comentarios Comentario[]

  @@map("usuarios")
}

model Perfil {
  idPerfil   Int      @id @default(autoincrement())
  nome_perfil String

  usuarios    Usuario[]

  @@map("perfis")
}

model Postagem {
  idPostagem Int      @id @default(autoincrement())
  titulo      String
  conteudo    String
  resumo      String
  imagem_capa String?
  tipo        String
  data        DateTime @default(now())

  autorId     Int
  autor       Usuario  @relation(fields: [autorId], references: [idUsuario])

  comentarios Comentario[]

  @@map("postagens")
}

model Edital {
  idEdital       Int      @id @default(autoincrement())
  titulo          String
  tipo            String
  editalurl       String
  data_publicacao DateTime @default(now())
  data_validade   DateTime

  autorId         Int
  autor           Usuario  @relation(fields: [autorId], references: [idUsuario])

  @@map("editais")
}

model Comentario {
  idComentario Int      @id @default(autoincrement())
  texto         String
  data          DateTime @default(now())

  usuarioId     Int
  usuario       Usuario  @relation(fields: [usuarioId], references: [idUsuario])

  postagemId    Int
  postagem      Postagem @relation(fields: [postagemId], references: [idPostagem])

  @@map("comentarios")
}